<Page
    x:Class="Natsurainko.FluentLauncher.Views.AuthenticationWizard.EnterOfflineProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Natsurainko.FluentLauncher.Views.AuthenticationWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    Tag="Enter Offline Account Profile (3/4)"
    mc:Ignorable="d">

    <StackPanel Spacing="10">
        <TextBox BorderBrush="{ThemeResource ButtonBorderBrush}" PlaceholderText="Name" />
        <TextBox BorderBrush="{ThemeResource ButtonBorderBrush}" PlaceholderText="UUID (Optional)" />
    </StackPanel>
</Page>
