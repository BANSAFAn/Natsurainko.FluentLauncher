<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FluentLauncher.Models">
    <FontFamily x:Key="MinecraftTen">
        /Assets/Fonts/MinecraftTen.ttf#Minecraft Ten,微软雅黑 Bold
    </FontFamily>
    <models:ApplicationTheme x:Key="ApplicationTheme" />
    <AcrylicBrush
        x:Key="ApplicationThemeBackground"
        BackgroundSource="HostBackdrop"
        TintColor="{Binding SystemBackgroundColor, Mode=TwoWay, Source={ThemeResource ApplicationTheme}}"
        TintLuminosityOpacity="0.5"
        TintOpacity="0.5" />
    <AcrylicBrush
        x:Key="ApplicationThemeControlBackground"
        BackgroundSource="Backdrop"
        TintColor="{Binding SystemBackgroundColor, Mode=TwoWay, Source={ThemeResource ApplicationTheme}}"
        TintLuminosityOpacity="0.5"
        TintOpacity="0.5" />
</ResourceDictionary>
